@{
    Layout = null; // Disable layout for this page
    var validationErrors = ViewBag.ValidationErrors as List<string>;
    var successMessage = TempData["SuccessMessage"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .forbidden-container {
            width: 100%;
            max-width: 600px;
            padding: 50px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h3, h4 {
            color: #dc3545;
            margin-bottom: 20px;
        }

        .btn-login {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            margin-top: 20px;
        }

            .btn-login:hover {
                background-color: #0056b3;
                color: white;
                text-decoration: none;
            }

        .icon-large {
            font-size: 64px;
            color: #dc3545;
            margin-bottom: 20px;
        }

        /* Validation Styles */
        .validation-summary {
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            text-align: left;
        }

        .success-message {
            background-color: #d4edda;
            color: #155724;
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid #c3e6cb;
            border-radius: 5px;
        }

        .home-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            margin-top: 20px;
            margin-left: 10px;
        }

            .home-button:hover {
                background-color: #218838;
                color: white;
                text-decoration: none;
            }
    </style>
</head>
<body>

    <div class="forbidden-container">
        <i class="bi bi-shield-lock-fill icon-large"></i>

        <h3>Truy cập bị từ chối</h3>
        <h4>Bạn không có quyền truy cập chức năng này!</h4>
        <p>Chức năng quản lý thanh toán chỉ được phép sử dụng bởi tài khoản Admin.</p>

        @if (validationErrors != null && validationErrors.Any())
        {
            <div class="validation-summary">
                <h5><i class="bi bi-exclamation-triangle-fill"></i> Chi tiết lỗi:</h5>
                <ul class="mb-0">
                    @foreach (var error in validationErrors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="success-message">
                <i class="bi bi-check-circle-fill"></i> @successMessage
            </div>
        }

        <div>
            <a asp-controller="Home" asp-action="Index" class="home-button">
                <i class="bi bi-house-door-fill"></i> Về trang chủ
            </a>
            <a asp-controller="UserAccounts" asp-action="Logout" class="btn-login">
                <i class="bi bi-box-arrow-left"></i> Đăng xuất
            </a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>