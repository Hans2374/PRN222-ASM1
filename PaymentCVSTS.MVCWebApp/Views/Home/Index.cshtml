@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Welcome to Payment Management System</h1>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="alert alert-success my-4">
            <h4><i class="bi bi-check-circle-fill"></i> You are logged in</h4>
            <p>You have full access to the payment system.</p>
        </div>
        <div class="row mt-4">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Payment Management</h5>
                    </div>
                    <div class="card-body">
                        <p>Access the payment management features to view and manage payment records.</p>
                        <a asp-controller="Payments" asp-action="Index" class="btn btn-primary">Go to Payments</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning my-4">
            <h4><i class="bi bi-exclamation-triangle-fill"></i> Limited Access</h4>
            <p>You are currently browsing as a guest. Please log in to access the payment management system.</p>
        </div>
        <div class="row mt-4">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">Authentication Required</h5>
                    </div>
                    <div class="card-body">
                        <p>You need to log in to view and manage payment records.</p>
                        <a asp-controller="UserAccounts" asp-action="Login" class="btn btn-primary">Log In</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>