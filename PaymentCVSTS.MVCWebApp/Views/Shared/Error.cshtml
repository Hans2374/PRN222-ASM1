@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        <h4>Error Details:</h4>
        <p>@Model.ErrorMessage</p>

        @if (Model.ValidationErrors != null && Model.ValidationErrors.Any())
        {
            <h5>Validation Errors:</h5>
            <ul>
                @foreach (var error in Model.ValidationErrors)
                {
                    <li>@error</li>
                }
            </ul>
        }
    </div>
}

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

@if (!string.IsNullOrEmpty(Model.StackTrace))
{
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">Stack Trace</h5>
        </div>
        <div class="card-body">
            <pre class="text-small">@Model.StackTrace</pre>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
</div>